# eBay API Configuration
# Get your keys at: https://developer.ebay.com/my/keys

# Production keys (when you get them)
EBAY_APP_ID=your_production_app_id_here
EBAY_CERT_ID=your_production_cert_id_here

# Sandbox keys (for testing - use the sandbox App ID from eBay Developer)
# Example: EBAY_APP_ID=YourName-YourApp-SBX-1234567890-abcdefgh
EBAY_SANDBOX=true

# API Settings
EBAY_SITE_ID=71
# Site IDs: 0=US, 71=France, 3=UK, 77=Germany, etc.

# Alerts & Notifications verification token (32-80 chars)
# Use the same value in the eBay Alerts & Notifications form
EBAY_NOTIFICATION_TOKEN=your_notification_token_here

# The full HTTPS endpoint URL that you configure in the eBay portal
# Example: https://your-ngrok-domain.ngrok-free.dev/api/ebay/notifications/account-deletion
EBAY_NOTIFICATION_ENDPOINT=https://your-domain.ngrok-free.dev

# Browse API OAuth client secret (required for /api/ebay/browse)
EBAY_CLIENT_SECRET="your_client_secret_here"

# Optional: affiliate context for Browse API header X-EBAY-C-ENDUSERCTX
# Example: affiliateCampaignId=123,affiliateReferenceId=abc
EBAY_ENDUSERCTX=
